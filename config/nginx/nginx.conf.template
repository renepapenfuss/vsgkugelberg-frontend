server {
    listen 80;
    server_name ${DOMAIN_NAME};

    root /usr/share/nginx/html;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ /index.html;
    }

    # Enable Nginx status metrics
    location /nginx_status {
        stub_status;
        allow all;  # For security, replace 'all' with specific IPs or 'localhost'
        deny all;
    }
}